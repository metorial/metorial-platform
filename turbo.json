{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "enterprise:dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "prisma:generate": {
      "dependsOn": [
        "^prisma:generate"
      ]
    },
    "prisma:push": {
      "cache": false,
      "dependsOn": [
        "^prisma:push"
      ],
      "env": [
        "DATABASE_URL",
        "PAYMENT_DATABASE_URL",
        "FEDERATION_CORE_DATABASE_URL"
      ]
    },
    "generate:client": {
      "dependsOn": [
        "^generate:client"
      ],
      "cache": false
    },
    "frontend:build": {
      "dependsOn": [
        "^frontend:build"
      ],
      "env": [
        "SENTRY_AUTH_TOKEN",
        "METORIAL_ENV",
        "VITE_*"
      ]
    },
    "deploy:only": {
      "env": [
        "SENTRY_AUTH_TOKEN",
        "METORIAL_ENV",
        "VITE_*",
        "CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_ACCOUNT_ID"
      ]
    },
    "deploy": {
      "env": [
        "SENTRY_AUTH_TOKEN",
        "METORIAL_ENV",
        "VITE_*",
        "CLOUDFLARE_API_TOKEN",
        "CLOUDFLARE_ACCOUNT_ID"
      ]
    },
    "server:build": {
      "dependsOn": [
        "^build",
        "^server:build"
      ],
      "env": [
        "SENTRY_AUTH_TOKEN",
        "METORIAL_ENV"
      ]
    },
    "test": {
      "dependsOn": [
        "^test"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
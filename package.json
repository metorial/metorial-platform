{
  "name": "@metorial/oss",
  "private": true,
  "scripts": {
    "build": "turbo run --ui=stream build",
    "generate:client": "turbo run generate:client && turbo run build",
    "client:generate": "bun run generate:client",
    "dev": "turbo run --concurrency 99 --ui=stream dev",
    "test": "turbo run --concurrency=1 --ui=stream test",
    "prisma:generate": "turbo run --ui=stream prisma:generate",
    "prisma:push": "turbo run --ui=stream --concurrency=1 prisma:push --",
    "prepare": "echo prepare",
    "postinstall": "echo postinstall",
    "preinstall": "[ -f \"../metorial_enterprise_install.sh\" ] && { ../metorial_enterprise_install.sh; } || { [ ! -f \"../metorial_enterprise_install.sh\" ] && echo \"Ignoring enterprise dependencies.\"; }"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.2.15"
  },
  "packageManager": "bun@1.2.15",
  "workspaces": [
    "_clients/metorial-node/*/*",
    "clients/metorial-dashboard",
    "scripts/*",
    "src/*",
    "src/*/*",
    "src/*/*/*"
  ],
  "dependencies": {
    "sade": "^1.8.1",
    "ts-proto": "^2.7.5"
  }
}
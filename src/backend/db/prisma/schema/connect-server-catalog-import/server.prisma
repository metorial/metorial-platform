model ImportedServer {
  oid BigInt @id @default(autoincrement())
  id  String @unique

  vendorOid BigInt
  vendor    ImportedServerVendor @relation(fields: [vendorOid], references: [oid])

  repositoryOid BigInt?
  repository    ImportedRepository? @relation(fields: [repositoryOid], references: [oid])

  serverOid BigInt @unique
  server    Server @relation(fields: [serverOid], references: [oid])

  identifier String @unique
  fullSlug   String @unique
  slug       String

  name        String
  description String?

  subdirectory String?

  isOfficial  Boolean
  isCommunity Boolean
  isHostable  Boolean

  readme String?

  /// [ServerAttributes]
  attributes Json

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([vendorOid, slug])
}

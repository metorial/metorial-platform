enum SecretEventType {
  secret_created
  secret_read
  secret_deleted
}

model SecretEvent {
  id   String          @id
  type SecretEventType

  secretOid BigInt
  secret    Secret @relation(fields: [secretOid], references: [oid])

  organizationActorOid BigInt
  organizationActor    OrganizationActor @relation(fields: [organizationActorOid], references: [oid])

  metadata Json

  createdAt DateTime @default(now())
}
